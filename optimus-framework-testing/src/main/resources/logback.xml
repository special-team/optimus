<?xml version="1.0" encoding="utf-8"?>
<configuration debug="false">

    <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%highlight([%.-1level] %msg) %white(@ %logger) %n</pattern>
            <!--<pattern>%highlight([%d{HH:mm:ss.SSS}][%.-1level] %msg) %white(@ %logger) %n</pattern>-->
            <!--"black red green yellow blue magenta cyan white gray bold*(boldRed)" and "highlight"-->
        </encoder>
    </appender>

    <root level="debug">
        <appender-ref ref="console"/>
    </root>

    <!--<logger level="error" name="org.springframework.boot.autoconfigure.logging.AutoConfigurationReportLoggingInitializer"/>-->
    <logger level="trace" name="com.github.ooknight"/>
    <logger level="trace" name="io.ebean"/>

</configuration>
