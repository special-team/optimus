<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<ebean xmlns="http://ebean-orm.github.io/xml/ns/ebean">
    <entity class="com.github.ooknight.rubik.optimus.archer.platform.entity.Function">
        <raw-sql name="get-role-resource">
            <column-mapping column="f.code_" property="code"/>
            <query>
                SELECT f.code_
                FROM e_platform_role_resource r
                    INNER JOIN e_platform_function f ON f.id_ = r.function_id_
                WHERE r.role_id_ = :id
            </query>
        </raw-sql>
        <raw-sql name="get-account-resource">
            <column-mapping column="f.code_" property="code"/>
            <query>
                SELECT f.code_
                FROM e_platform_account_resource r
                    INNER JOIN e_platform_function f ON f.id_ = r.function_id_
                WHERE r.account_id_ = :id
            </query>
        </raw-sql>
        <raw-sql name="get-resource-for-supervisor">
            <column-mapping column="f.code_" property="code"/>
            <query>
                SELECT f.code_
                FROM e_platform_function f
            </query>
        </raw-sql>
    </entity>
</ebean>
